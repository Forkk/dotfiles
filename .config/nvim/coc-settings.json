{
    "languageserver": {
        "godot": {
            "host": "127.0.0.1",
            "filetypes": ["gdscript"],
            "port": 6008
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        },
        "purescript": {
            "command": "/home/forkk/.yarn/bin/purescript-language-server",
            "args": ["--stdio"],
            "filetypes": ["purescript"],
            "trace.server": "off",
            "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
            "settings": {
                "purescript": {
                    "addSpagoSources": true,
                    "addNpmPath": true
                }
            }
        }
    },
    "diagnostic.locationlistUpdate": true,
    "hover.floatMaxHeight": 420,
    "diagnostic.maxWindowHeight": 420,
    "signature.maxWindowHeight": 420,
    "rust-client.rustupPath": "/home/forkk/.cargo/bin/rustup",
    "rust-analyzer.server.path": "/home/forkk/bin/rust-analyzer"
}
