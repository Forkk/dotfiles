#!/usr/bin/env bash

NOTIF_ARGS='--icon=dialog-information --urgency=low'

if killall picom; then
    dunstify -h string:x-dunst-stack-tag:compositor "Compositor" "Compositing disabled" $NOTIF_ARGS
else
    compton-start
    dunstify -h string:x-dunst-stack-tag:compositor "Compositor" "Compositing enabled" $NOTIF_ARGS
fi
