! xterm

XTerm.vt100.faceName: Source Code Pro:size=11:antialias=true

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! URxvt crap

URxvt*font: xft:DejaVu Sans Mono:size=12
! Fade the text by the given percentage when focus is lost; option -fade.
! URxvt*fading: 5
URxvt*scrollBar: false
! Specifies the terminal type name to be set in the TERM environment variable; option -tn.
! URxvt*termName: termname
URxvt*perl-ext-common: default
! Turn on/off ISO 14755 (default enabled).
URxvt*iso14755: false
! Turn on/off ISO 14755 5.2 mode (default enabled).
URxvt*iso14755_52: false


! XTerm crap...

UXTerm*faceName: DejaVu Sans Mono
UXTerm*faceSize: 12
! Double click to select whole URLs! Thanks for this, random internet person! :D
UXTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
UXTerm*termName: xterm-256color
UXTerm*locale: true
UXTerm*selectToClipboard: true
UXTerm*bellIsUrgent: true
